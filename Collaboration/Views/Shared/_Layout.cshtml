<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    <!-- CSS only -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/jquery-ui-1.11.3.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/notify.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/notify.min.js")' type="text/javascript"></script>
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/jquery-1.12.1.min.js")' type="text/javascript"></script>

</head>
<body>
    <br />
    <div class="row" style="margin-left:auto; margin-right:auto; width:80%;">
        <div class="col-md-3">
            @Html.ActionLink("Collaboration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="col-md-9">
            <ul class="nav justify-content-end">
                <li class="nav-item">
                    @Html.ActionLink("Home page", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                @if (User.IsInRole("Admin"))
                {
                <li class="nav-item">
                    @Html.ActionLink("Management", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })
                </li>
                }
                <li class="nav-item">
                    @Html.ActionLink("About us", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contacts", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.Partial("_LoginPartial")
                </li>
            </ul>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>
    <script>
        $(function () {
            var tab = $('#tabs .tabs-items > div');
            tab.hide().filter(':first').show();

            // Клики по вкладкам.
            $('#tabs .tabs-nav a').click(function () {
                tab.hide();
                tab.filter(this.hash).show();
                $('#tabs .tabs-nav a').removeClass('active');
                $(this).addClass('active');
                return false;
            }).filter(':first').click();

            // Клики по якорным ссылкам.
            $('.tabs-target').click(function () {
                $('#tabs .tabs-nav a[href=' + $(this).data('id') + ']').click();
            });
        });
    </script>
    <script >
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });
            });
        });
    </script>

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
