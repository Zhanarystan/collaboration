@model Collaboration.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="row" style="margin-top:100px;">
    <div class="card text-center" style="width:60%; margin-left:auto; margin-right:auto;">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs justify-content-center">
                <li class="nav-item" style="width:50%;">
                    <a class="nav-link" href="/Account/Login">Login</a>
                </li>
                <li class="nav-item" style="width:50%;">
                    <a class="nav-link active" href="/Account/Register">Registration</a>
                </li>
            </ul>
        </div>
        <div class="card-body" style="width:80%; margin-left:auto; margin-right:auto;">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Creation new account</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group" style="width: 80%; margin-right: auto; margin-left: auto;">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                </div>
                <div class="form-group" style="width: 80%; margin-right: auto; margin-left: auto; margin-top: 10px;">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="form-group" style="width: 80%; margin-right: auto; margin-left: auto;margin-top: 10px;">
                    @Html.LabelFor(m => m.Surname, new { @class = "col-md-3 control-label" })
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                </div>


                <div class="form-group" style="width: 80%; margin-right: auto; margin-left: auto;margin-top: 10px;">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                </div>
                <div class="form-group" style="width: 80%; margin-right: auto; margin-left: auto;margin-top: 10px;">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

                </div>
                <div class="form-group float-center" style="margin-top:20px;">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
            }
        </div>
    </div>
</div>


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
